{
	"ConnectionStrings": {
		"Default": "Server=${DATALAKE_HOST}; Database=${DATALAKE_DB}; User Id=${DATALAKE_DB_USER}; Password=${DATALAKE_DB_PASS}; Pooling=true; MinPoolSize=10; MaxPoolSize=100;"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Warning",
			"Microsoft.AspNetCore": "Information"
		}
	},
	"AllowedHosts": "*",
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": "Warning",
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "Logs/applog-.txt",
					"rollingInterval": "Day"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName" ],
		"Properties": {
			"ApplicationName": "Your ASP.NET Core App"
		}
	}
}
