{
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"Default": "Server=${DB_HOST}; Database=${DB_NAME}; User Id=${DB_USER}; Password=${DB_PASS}; Pooling=true; MinPoolSize=10; MaxPoolSize=100; CommandTimeout=0; Timeout=0; Include Error Detail=True"
	},
	"Sentry": {
		"Dsn": ""
	},
	"Serilog": {
		"MinimumLevel": {
			"Default": "Debug",
			"Override": {
				"System": "Warning",
				"Microsoft": "Warning",
				"Microsoft.AspNetCore": "Information",
				"Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
				"Microsoft.AspNetCore.Cors.Infrastructure.CorsService": "Warning",
				"Microsoft.AspNetCore.Cors.Infrastructure.CorsMiddleware": "Warning",
				"Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
				"Microsoft.AspNetCore.Mvc.Routing": "Warning",
				"Microsoft.AspNetCore.Mvc.Infrastructure.ObjectResultExecutor": "Warning",
				"Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker": "Warning",
				"Microsoft.AspNetCore.Authorization.DefaultAuthorizationService": "Warning",
				"Microsoft.AspNetCore.HttpsPolicy.HttpsRedirectionMiddleware": "Error",
				"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
				"Npgsql": "Warning",
				"Sentry": "Warning",
				"LinqToDB": "Warning",
				"LinqToDB.Command": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "File",
				"Args": {
					"path": "storage/logs/all-log-.txt",
					"rollingInterval": "Day",
					"retainedFileCountLimit": 30,
					"outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "File",
				"Args": {
					"path": "storage/logs/errors-log-.txt",
					"rollingInterval": "Day",
					"outputTemplate": "{Timestamp:dd.MM.yyyy HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
					"retainedFileCountLimit": 30,
					"restrictedToMinimumLevel": "Error"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"Properties": {
			"Application": "datalake"
		}
	},
	"InventoryUri": ""
}
